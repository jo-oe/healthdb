<p id="notice"><%= notice %></p>

<h1>Citizenships</h1>

<table>
  <thead>
    <tr>
      <th>Iso3166</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @citizenships.each do |citizenship| %>
      <tr>
        <td><%= citizenship.iso3166 %></td>
        <td><%= citizenship.name %></td>
        <td><%= link_to 'Show', citizenship %></td>
        <td><%= link_to 'Edit', edit_citizenship_path(citizenship) %></td>
        <td><%= link_to 'Destroy', citizenship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= form_tag citizenships_path, method: :get do %>
<%= text_field_tag :query, params[:query], class: 'form-control typeahead' %>
  <%= submit_tag 'Search' %>
<% end %>


<%= link_to 'New Citizenship', new_citizenship_path %>
