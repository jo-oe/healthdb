<% if (alert) %>
  <p id="alert" class="alert alert-danger alert-dismissible fade show"><%= alert %></p>
<% end %>

<h1><%= t(:login) %></h1>

<%= form_tag '/login' do %>

  Benutzername: <%= text_field_tag :username %>
  Passwort: <%= password_field_tag :password %>
  <%= submit_tag t(:log_in), class: "btn btn-hdb-std btn-danger" %>

<% end %>
